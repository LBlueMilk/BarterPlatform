@model BarterPlatform.Models.EMailCommentModel

@{
    ViewData["Title"] = "站長信箱";
}


<style>
    .privacy-policy-container {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

        .privacy-policy-container p {
            font-size: 16px;
            line-height: 1.6;
            color: #333;
        }

    .comment-form-container {
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

    .comment-form-inner {
        width: 100%;
        max-width: 600px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

        .comment-form-inner label {
            display: block;
            margin-top: 10px;
        }

        .comment-form-inner input,
        .comment-form-inner textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .comment-form-inner button {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .comment-form-inner button:hover {
                background-color: #0056b3;
            }

    .alert {
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="privacy-policy-container">
    <p>
        歡迎您的到來，這裡是站長學習網頁設計的成果，雖然沒甚麼好看的，但願能在這裡得到些什麼。<br>
        <br>
        祝福你，陌生人。
        <br>
        如有什麼想說的，就在底下告訴我吧~
    </p>

</div>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@* 訪客信箱留言 *@
<div class="comment-form-container">
    <div class="comment-form-inner">
        <form asp-action="SendComment" method="post">
            <div>
                <label asp-for="Name">姓名：</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Email">電子郵件：</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Message">留言：</label>
                <textarea asp-for="Message"></textarea>
                <span asp-validation-for="Message"></span>
            </div>
            <button type="submit">提交留言</button>
        </form>
    </div>
</div>

